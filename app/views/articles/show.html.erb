<h2>
  <%= @article.title %>
  <%= link_to ' <i class="far fa-edit"></i>'.html_safe, edit_article_path %>
  <%= link_to "<i class='far fa-trash-alt'></i>".html_safe,
              article_path(@article),
              method: :delete,
              data: { confirm: "Are you sure :(?" } %>
</h2>

<blockquote>
  <p><%= @article.content %> </p>
</blockquote>

<p>
  <%= link_to '<i class="fas fa-reply-all"></i>'.html_safe, articles_path %>
</p>
